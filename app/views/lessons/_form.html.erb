<%= render "layouts/errors", :object => @lesson %>

<%= form_for @lesson do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :text %>
  <%= f.text_field :text %>
  <%= f.label :number %>
  <%= f.number_field :number %>
  <%= f.label :section %>
  <%= select :lesson, :section_id, Section.all.collect {|p| [ p.name, p.id ] }, { include_blank: true } %>
  <%= f.submit %>
<% end %>
