<% content_for(:title, "Section | LHTP")%>

<h1><%= @section.name %></h1>

<% if @section.lessons.any? %>
  <h4>Lessons for this section:</h4>

  <ul>
    <% @section.lessons.order(number: :asc).each do |lesson| %>
    <li>
      <%= link_to lesson.name, lesson_path(lesson) %>
    </li>
    <% end %>
  </ul>
  <% else %>
  <p>There are no lessons yet</p>
  <% end %>

<p><%= link_to "Edit Section", edit_section_path(@section) %></p>
<p><%= link_to "Delete Section", section_path(@section),
                               :data => {:confirm => "You sure?!",
                                     :method => "delete" }%></p>
